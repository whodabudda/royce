<p id="notice"><%= notice %></p>

<h1>Galleries</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @galleries.each do |gallery| %>
      <tr>
        <td>gallery id<%= gallery.id %></td>
        <td>
        <%if gallery.images.attached?  %> 
           image ids: 
          <%gallery.images.each  do |i| %>
        <%#= image_tag i.variant(resize_to_limit: [100, 100]) %>
             <%= i.id  %>
          <%end%>
        <%else%>
          "No images attached to this Gallery"
        <%end%>

          <%#= image_tag gallery.images if gallery.images.attached? %></td>
        <td><%= link_to 'Show', gallery %></td>
        <td><%= link_to 'Edit', edit_gallery_path(gallery) %></td>
        <td><%= link_to 'Destroy', gallery, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
   <%end%>
  </tbody>
</table>

<br>

<%= link_to 'New Gallery', new_gallery_path %>
