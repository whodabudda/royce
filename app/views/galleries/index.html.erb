<p id="notice"><%= notice %></p>

<h1>Galleries</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @galleries.each do |gallery| %>
      <tr>
        <td><%= render 'form', gallery: gallery %></td>
        <td>
             <%=link_to 'Destroy', gallery, method: :delete, data: { confirm: 'Are you sure?' }%>
        </td>
      </tr>
   <%end%>
  </tbody>
</table>

<br>

<p><%= link_to 'New Gallery', new_gallery_path %></p>
<p><%= link_to 'Back', root_path %></p>
